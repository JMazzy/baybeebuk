<% @memories.each do |memory| %>

  <h3><%= memory.title %></h3>

  <% memory.people.each do |person| %>
    <a href="<%= person_path( id: person.id )%>">
      <span class="person"><%= person.first_name %> <%= person.last_name %></span>
    </a>
  <% end %>

  <p class="memdate">
    <%= memory.memory_date %>
  </p>

  <p>
    <%= memory.body %>
  </p>

<% end %>
