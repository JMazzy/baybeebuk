<% if user_signed_in? %>

  <%= link_to current_user.person.full_name, person_path( current_user.person ), class: "navbar-text" %>

  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>

<% else %>

  <a href="<%= new_user_session_path %>" class="btn btn-outline-primary">
    Sign In
  </a>

  <a href="<%= new_user_registration_path %>" class="btn btn-outline-success">
    Sign Up
  </a>

<% end %>
